                            <option>03</option>
                            <option>04</option>
                            <option>05</option>
                            <option>06</option>
                            <option>07</option>
                            <option>08</option>
                            <option>09</option>
                            <option>10</option>
                            <option>11</option>
                            <option>12</option>
                        </select>
    
                        <label for="cvc">CVC</label>
                        <input type="text" id="cvc" name="cvc" />
    
                        <label for="num-of-payments">תשלומים</label>
                        <select id="num-of-payments" name="num-of-payments">
                            <option>1</option>
